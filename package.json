{
    "name": "Chopper",
    "version": "0.0.1",
    "description": "webpack react Node.js express MonogoDB",
    "main": "app.js",
    "scripts": {
        "build": "webpack",
        "dev": "webpack-dev-server --devtool eval --progress --colors --hot --content-base build"
    },


"scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "NODE_ENV=development node server/index.js",
    "devHotLoader": "npm run buildHotLoader && NODE_ENV=devhotloader node server/index.js",
    "build": "webpack --progress --colors --config ./webpack/webpack.config.js",
    "buildHotLoader": "webpack --progress --colors --config ./webpack/webpack-hot-dev-server.config.js",
    "watch": "webpack --watch --progress --config ./webpack/webpack.config.js",
    "watchHotLoader": "webpack --watch --progress --config ./webpack/webpack-hot-dev-server.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "webpack -p --config ./webpack/webpack.config.js"
},

    
    "engines": {
        "node": "0.12.4",
        "npm": "2.10.1"
    },
    "keywords": [
        "webpack",
        "react"
    ],
    "author": "playwolsey",
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^5.8.3",
        "babel-loader": "^5.3.2",
        "css-loader": "^0.15.5",
        "file-loader": "^0.8.4",
        "node-libs-browser": "^0.5.2",
        "style-loader": "^0.12.3",
        "url-loader": "^0.5.6",
        "nodemon": "^1.2.1",
        "webpack-dev-server": "^1.10.1",
        "webpack": "^1.10.1"
    },
    "dependencies": {
        "react": "^0.13.3",
        "express": "4.13.1",
        "express.io": "1.1.13",
        "express-dot-engine": "~1.0.7",
        "async": "1.4.2",
        "body-parser": "1.13.3",
        "cookie-parser": "1.3.5",
        "errorhandler": "1.4.2",
        "mongoose": "4.1.3",
        "morgan": "1.6.1",
        "socket.io": "1.3.6",
        "serve-favicon": "2.3.0",
        "node-jsx": "~0.11.0"
    }
}
